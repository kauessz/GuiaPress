<%- include ('../../partials/header.ejs'); %>
<%- include ('../../partials/navibar.ejs'); %>

<div class="container">
    <hr>
    <h2>Categorias</h2>
    <a class="btn btn-dark" href="/admin/categories/new">Criar nova categoria</a><hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category => { %>
                <tr>
                    <th><%= category.id %></th>
                    <th><%= category.title %></th>
                    <th><%= category.slug %></th>
                    <th>
                        <button class="btn btn-warning">Editar</button>

                        <form method="post" action="/categories/delete" style="display: inline" onsubmit="confirmarExclusao(event)">
                            <input type="hidden" nome="id" value="<%= category.id %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                        
                    </th>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <hr>
</div>
<%- include ('../../partials/footer.ejs'); %>

<script>
    function confirmarExclusao(event){
        event.preventDefaut();
        let decision = confirm('Você quer deletar esta categoria?');
        if(decision){
            console.log('Eu escolhi deletar'); 
        
        }else{
            console.log('não quero deletar');
        }
    }
</script>